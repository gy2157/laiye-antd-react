{
  "compilerOptions": {
      "sourceMap": true,
      "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "target": "es6",
      "lib": ["es6", "es7", "dom"],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "jsx": "react",
      "allowJs": true,
      "skipLibCheck": true,
      "typeRoots": [
          "./node_modules/@types"
      ]
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
