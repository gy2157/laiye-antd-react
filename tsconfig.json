{
  "compilerOptions": {
    // "types": [
    //   "reflect-metadata"
    // ],
      "sourceMap": true,
      "strictNullChecks": false,
      "allowUnusedLabels": false,	// 不报告未使用的标签错误
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "extendedDiagnostics": true,
      "alwaysStrict": false,
      "diagnostics": true,
      "target": "ESNext",
      "lib": [ // 编译过程中需要引入的库文件的列表
        "es5",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "ESNext",
        "dom"
      ],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "jsx": "preserve",
      "allowJs": true,
      "skipLibCheck": true,
      "typeRoots": [
          "./node_modules/@types"
      ]
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
